{
    "type": "weather",
    "name": "Weather",
    "class": "data_card",
    "icon": "./icon.svg",
    "defaultRow": 2.5,
    "defaultCol": 3,
    "minRow": 2,
    "minCol": 2,
    "configProps": [
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "valueType": "object",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small",
                        "entityType": ["PROPERTY"],
                        "entityAccessMods": ["W", "RW"],
                        "entityExcludeChildren": true
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "components": [
                {
                    "type": "input",
                    "title": "Label",
                    "key": "label",
                    "defaultValue": "Weather",
                    "componentProps": {
                        "size": "small",
                        "inputProps": {
                            "maxLength": 35
                        }
                    }
                }
            ]
        },
        {
            "title": "Appearance of status",
            "style": "display: flex;",
            "components": [
                {
                    "type": "iconSelect",
                    "key": "icon",
                    "style": "flex: 1;padding-right: 12px;",
                    "defaultValue": "IotModeWakeUpIcon",
                    "componentProps": {
                        "size": "small"
                    },
                    "rules": {
                        "required": true
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "bgColor",
                    "style": "flex: 1;",
                    "defaultValue": "#537BC0",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        }
    ],
    "view": []
}
